{% extends 'base.html.twig' %}

{% block header %}
    <!-- Header - set the background image for the header in the line below  assets/img/img1.jpg -->
    <header class="py-1 bg-image-full d-flex">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7" style="margin-top: 15em">
                    <div class="text-center my-5">
                        <div class="p-2"><h1 class="text-white fw-bolder">Bienvenue sur Snow Tricks</h1></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex align-items-end flex-column">
            <div class="mt-auto p-2">
                <i class="fas fa-arrow-down fa-3x" style="color: white"></i>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <!-- Content section-->
    <section class="py-5">
        <div class="my-5 container-fluid">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 justify-content-center text-center align-items-center rowtricks">
                {% for j in 1..15 %}
                <div class="trickshome col d-flex justify-content-center ">
                    <div class="card" style="width: 22rem; text-align: left">
                        <img class="card-img-top" src="https://dummyimage.com/150x100/6c757d/dee2e6.jpg" alt="Card image cap">
                        <div class="card-body row">
                            <a class="col-8" href="/">Card title</a>
                            <a class="col-2" href="/"><i color="black" class="fas fa-pen"></i></a>
                            <a class="col-2" href="/"><i color="red" class="fa fa-times" ></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}