{% extends "base.html.twig" %}

{% block title %}Ajout Media{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div id="formMedia">
        <section>
            <div id="form-title">
                <h1>Ajout de Media</h1><br>
                <h2>{{ trick.title }}</h2>
            </div>
            <div class="container form-control form-trick " style="background: none; height: max-content">
                {{ form_start(form) }}
                {{  form_row(form.url, {'attr': {'label': "Lien URL"}}) }}
                {{  form_row(form.type, {'attr': {'label': "Type"}}) }}
                {{ form_end(form) }}
                <div id="btn-form">
                    <a class="btn btn-secondary" href="/trick/{{ trick.id }}-{{ trick.slug }}/edit" role="button">Retour</a>
                    <button data-bs-toggle="modal" data-bs-target="#modalMedia" class="btn btn-success">Enregistrer</button>
                    {# Modal pour confirmer la supression du media #}
                    <div class="modal fade" id="modalMedia" tabindex="-1" aria-labelledby="modalLabelMedia" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabelMedia">Ajout de Média</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Êtes-vous sur de vouloir ajouter ce média ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                                    <a class="btn btn-primary" type="submit" role="button">Oui</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}