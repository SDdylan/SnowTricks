{% extends 'base.html.twig' %}

{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Réinitialisez votre mot de passe.{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div id="password">
    <section>
        <h1 id="password-title">Réinitialisez votre mot de passe</h1>
        <div class="container form-control form-password">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>Renseignez votre email et nous vous enverrons un lien pour changer votre mot de passe.</small>
            </div>
            <div class="btn-password">
                <button class="btn btn-primary btn-lg">Envoyer</button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </section>
</div>
{% endblock %}
