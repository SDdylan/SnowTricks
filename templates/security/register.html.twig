{% extends "base.html.twig" %}

{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div id="register">
        <section>
            <h1 id="register-title">Inscription</h1>
            <div class="container form-control form-register" style="background: none; height: max-content">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {'attr': {'placeholder': "Pseudo"}}) }}
                {{ form_row(registrationForm.email, {'attr': {'placeholder': "Email"}}) }}
                {{ form_row(registrationForm.lastName, {'attr': {'placeholder': "Nom"}}) }}
                {{ form_row(registrationForm.firstName, {'attr': {'placeholder': "Prénom"}}) }}
                {{ form_row(registrationForm.imageUrl, {'attr': {'placeholder': "Image URL"}}) }}
                {{ form_row(registrationForm.password, {'attr': {'placeholder': "Mot de passe"}}) }}
                {{ form_row(registrationForm.confirm_password, {'attr': {'placeholder': "Confirmez mot de passe"}}) }}
                {# {{ form_widget(registrationForm) }} #}
                <div id="btn-register">
                    <button  type="submit" class="btn btn-success btn-lg">Inscription</button>
                </div>
                {{ form_end(registrationForm) }}
                <p id="register-login"><a href="/login">J'ai déjà un compte</a></p>
            </div>
        </section>
    </div>
{% endblock %}
