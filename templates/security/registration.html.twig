{% extends "base.html.twig" %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <h1 style="text-align: center">Inscription sur le site</h1>
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.username, {'attr': {'placeholder': "Pseudo"}}) }}
        {{ form_row(form.password, {'attr': {'placeholder': "Mot de passe"}}) }}
        {{ form_row(form.confirm_password, {'attr': {'placeholder': "Confirmez mot de passe"}}) }}
        {{ form_row(form.lastName, {'attr': {'placeholder': "Nom"}}) }}
        {{ form_row(form.firstName, {'attr': {'placeholder': "Nom"}}) }}
        {{ form_row(form.email, {'attr': {'placeholder': "Email"}}) }}
        {{ form_row(form.imageUrl, {'attr': {'placeholder': "Image URL"}}) }}
        {# {{ form_widget(form) }} #}
        <button type="submit" class="btn btn-primary">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}